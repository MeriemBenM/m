
@{
    ViewData["Title"] = "ListBlock";
    Layout = null;
}

<link rel="stylesheet" href="~/stylesheets/lib/bootstrap.min.css" /><link rel="stylesheet" href="~/stylesheets/blockchain.css" /><link rel="stylesheet" href="~/stylesheets/lib/bootstrap-horizon.css" />
<div class="container-fluid">
    <h2>List Block</h2>
    @{ 
        var blocks = ViewBag.Blocks as List<Block>;
    }
    <div class="row row-horizon">
        @{ 
            var i = 1;
            var j = 1;
        }
        @foreach (var block in blocks)
        {
        <div class="col-xs-7" style="">
            <div id="block1chain1well" class="well well-success" style="">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="block1chain1number" class="col-sm-2 control-label">Block:</label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon">#</span>
                                <input id="block1chain1number" type="number" value="@i" onchange="updateChain(1,1)"; onkeyup="updateChain(1, 1);" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="block1chain1nonce" class="col-sm-2 control-label">Nonce:</label>
                        <div class="col-sm-10">
                            <input id="block1chain1nonce" type="text" value="@block.Proof" onkeyup="updateChain(1, 1);" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Tx:</label>
                        <div class="col-sm-10">

                            @foreach (var item in block.Transactions)
                            {
                                <div class="input-group">
                                    <div class="input-group-addon">$</div>
                                    <input for="block1chain1tx0value" type="text" value="@item.Amount" onkeyup="updateChain(1, 1);" class="form-control" />
                                    <div class="input-group-addon">From:</div>
                                    <input for="block1chain1tx0from" type="text" value="@item.Sender" onkeyup="updateChain(1, 1);" class="form-control" />                                       
                                    <div class="input-group-addon">To :</div>
                                    <input for="block1chain1tx0to" type="text" value="@item.Recipient" onkeyup="updateChain(1, 1);" class="form-control" />
                                </div>


                                j++;
                            }
                        </div>,
                    </div>

                   
                   <div id="state" class="form-group">
                        <label for="blockchain1previous" class="col-sm-2 control-label">Prev:</label>
                        <div class="col-sm-10">
                                    <input id="blockchain1Prev" type="text" value="@block.PreviousHash" onkeyup="updateChain(1, 1);"  class="form-control" disabled=""/> 
                            </div>
                    </div>
                    

                   <div id="state" class="form-group">
                        <label for="blockchain1hash" class="col-sm-2 control-label">Hash:</label>
                        <div class="col-sm-10">
                            <input id="blockchain1hash" type="text" value="@block.HASH" onekeyup="updateChain(1,1)" class="form-control" disabled=""/>
                        </div>
                    </div>

                </form>
        </div>
            </div>
            i++;
        }
    </div>
</div>

